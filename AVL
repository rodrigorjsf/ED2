typedef struct noAvl {
	char cod [10], desc [100];
	float preco;
	int estoque;
	struct noAvl * esq, * dir;
	int fatbal;
}noAVL;

noAVL * CriarNo (char codigo[]);

void LL(noAVL** r);

void LR(noAVL** r);

void RR(noAVL** r);

void RL(noAVL** r);

void LLRem(noAVL** r);

